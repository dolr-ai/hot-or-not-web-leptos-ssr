# Health check endpoint on HTTP (for load balancer health checks)
:80 {
    @health path /health
    respond @health "OK" 200

    # Redirect everything else to HTTPS
    redir https://{host}{uri} permanent
}

# Testing via IP (remove after DNS is pointed)
:8080 {
    reverse_proxy yral-frontend:8080 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    encode gzip zstd
}
