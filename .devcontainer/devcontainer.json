{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // copilot
        "GitHub.copilot",
        "GitHub.copilot-chat",
        // docker
        "ms-azuretools.vscode-containers",
        // editor
        "albert.TabOut",
        // github
        "mhutchie.git-graph",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        // rust
        "fill-labs.dependi",
        "tamasfe.even-better-toml",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        // shell
        "TheNuProjectContributors.vscode-nushell-lang",
        // tailwindcss
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "features": {
    // kickass shell
    "ghcr.io/eitsupi/devcontainer-features/nushell:0": {},
    // // the best language
    // "ghcr.io/devcontainers/features/rust:1": {},
    // // for clang required to build ring
    // "ghcr.io/devcontainers-community/features/llvm": {},
    // build dependency
    "ghcr.io/devcontainers-extra/features/protoc:1": {},
    // // common utils for pkg-config and openssl
    // "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "hostRequirements": {
    "cpus": 8
  },
  "postCreateCommand": "nu .devcontainer/setup.nu"
}