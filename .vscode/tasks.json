{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo leptos watch",
            "type": "shell",
            "group": "build",
            "command": "cargo",
            "args": [
                "leptos",
                "watch",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false,
                "group": "${cwd}"
            }
        }
    ]
}